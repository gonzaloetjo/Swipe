          <%= form_with model: @offer do |form| %>
            <%= form.hidden_field :product_id, value: @product.id %>
            <%= form.hidden_field :user_id, value: @user.id %>
            <div class="input-group">
              <%= form.fields_for :messages, @message do |message_form| %>
               <%= message_form.hidden_field :product_id, value: @product.id %>
               <%= message_form.hidden_field :user_id, value: current_user.id %>
               <div class="form-group basic-textarea">
                <%= message_form.text_field :message_content, placeholder: "Typee your message here", class:"form-control form-control-lg" %>
             </div>
              <% end %>
              <div class="input-group-append">
                <input type="submit" name="submit" value="send" class="btn btn-info btn-rounded btn-sm waves-effect waves-light float-right">
              </div>
            </div>
          <% end %>

