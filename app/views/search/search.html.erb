<div class="container">
  <ul id="slides">
    <% @products.each_with_index do |product, i| %>
      <li class="slide <%= 'showing' if i == 0 %>" data_id="<%= product.id %>">
        <% if product.images.attached? %>
          <%= image_tag product.images.first %>
        <% end %>
        <%= product.name %>
      </li>
    <% end %>
  </ul>
  <div class="slides-buttons">
    <span id="decline"><i class="fa fa-times fa-2x"></i></span>
    <span id="approve"><i class="fa fa-heart fa-2x"></i></span>
  </div>
</div>
